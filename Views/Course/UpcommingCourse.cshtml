@model IEnumerable<BigSchool.Models.Course>

@{
    ViewBag.Title = "UpcommingCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>My Upcomming Course</h2>
<ul class="course" style="margin-top:20px">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="moth">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <div class="lecturer">
                    @course.Lecturer.Name
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
            </div>
            <div class="action">
                <a href="@Url.Action("Edit","Course" , new { id = course.Id})">
                    Edit
                </a> |
                <a href="#" class="js-cancel-course" data-course-id="@course.Id">Cancel</a>
            </div>


        </li>
    }
</ul>
@section scripts{
    <script>
            $(document).ready(function () {
                $(".js-cancel-course").click(function (e) {
                    e.preventDefault();
                    var link = $(e.target);
                    bootbox.confirm("Are you sure to cancel",
                        function () {
                            $.ajax({
                                url: "/api/Courses/" + link.attr("data-course-id"),
                                method: "DELETE"
                            })
                                .done(function () {
                                    link.parents("li").fadeOut(function () {
                                        $(this).remove();
                                    });
                                })
                                .fail(function () {
                                    alert("Something failed!");
                                });
                        });
                });
            });
    </script>

}
